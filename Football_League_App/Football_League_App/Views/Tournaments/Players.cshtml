@{
	ViewBag.Title = "Players";
	Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@model Football_League_App.Models.Player
<html>
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap.min.js">
  
	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>My Page</title>
</head>
<body>
    <form method="GET">
        <div class="wrapper">
            <div class="container">
                <table class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Birthday</th>
                            <th>Nationality</th>
                            <th>CLB</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.TenCt</td>
                                <td>@item.NgaySinh</td>
                                <td>@item.QuocTich</td>
                                <td>@item.MaClb</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </form>
    <form method="post">
        <div class="card-wrapper">
            <button id="btnAddPlayer" asp-area="" asp-action="AddPlayer" asp-controller="Tournaments">
                Add Player
            </button>
            <button id="btnRemovePlayer">
                Remove Player
            </button>
        </div>
      
    </form>
  

</body>
</html>