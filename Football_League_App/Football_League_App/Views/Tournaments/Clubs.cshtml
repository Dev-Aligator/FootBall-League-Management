@{
	Layout = "_LayoutDashboard";
}
@model IEnumerable<Club>

<html>

	<head>

	</head>

	<body>

	<button href="javascript:openClubForm()>
		Add Club
	</button>

	<div class="form-popup" id="myForm">
		<form class="form-container" method="post">
			<h1>Register Club</h1>
			<h2><strong>@TempData["Message"]</strong></h2>
			<label>Club's Name</label>
			<input type="text" placeholder="Enter Club's Name" name="clubName" required>
			<label>Club's Address</label>
			<input type="text" placeholder="Enter Club's Address" name="clubAddr" required>
			<label>Club's Stadium</label>
			<input type="text" placeholder="Enter Club's Stadium" name="clubStad" required>
			<label>Club's Logo</label>
			<input type="file" id="uploadImage" accept="image/*" name="imgFile">

			<button type="submit" class="btn" asp-controller="Tournaments" asp-action="AddClub">Add</button>
			<button type="button" class="btn cancel" onclick="closeClubForm()">Close</button>
		</form>
	</div>

		<table class="table">
			<thead>
				<tr>
					<th><img/>Logo</th>
					<th scope="col">ID</th>
				    <th scope="col">Name</th>
				    <th scope="col">Address</th>
				    <th scope="col">Stadium</th>
				</tr>
			</thead>
			<tbody>
			@foreach (var item in ViewBag.model)
			{
				<tr>
					<td><img img src="~/images/@item.ImgPath" width="50" height="50" /></td>
					<th scope="row">@item.Id</th>
					<td>@item.TenClb</td>
					<td>@item.DiaChi</td>
					<td>@item.TenSvd</td>
					<td>@item.MaCt</td>
				</tr>
			}

		</tbody>

		</table>

	<script src="~/js/RegisterTournament.js"></script>
	</body>

</html>